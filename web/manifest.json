{
  "manifest_version": 2,
  "name": "serve",
  "short_name": "serve",
  "description": "Serve a local folder on localhost.",

  "version": "0.0.1.0",

  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    { "fileSystem": ["directory", "retainEntries"] }
  ],

  "sockets": {
    "tcpServer": { "listen": ":*" }
  }
}
